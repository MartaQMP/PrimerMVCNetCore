@{
    @model List<int>
}
<h1>Congetura de collatz</h1>
<form method="post">
    <label class="form-label">Introduce un numero:</label>
    <input class="form-control" type="text" name="numero"/>
    <br />
    <button class="btn btn-dark">Hacer Collatz</button>
</form>

@if(Model != null){
    <ul>
        @foreach (int numero in Model)
        {
            <li>@numero</li>
        }
    </ul>
}
