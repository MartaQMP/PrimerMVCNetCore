@{
    //ESTO ES CODIGO C#
    int valor = 14;
    string dato = "Hoy es jueves";
    valor += 1;
    dato += " y mañana viernes...";
}

<h1>Codigo Razor</h1>
<h2>Variables: @dato, @valor</h2>

@if(valor > 0)
{
    //CODIGO C#
    dato = "POSITIVO";
    <p style="color: green">@dato</p>
}else
{
    //CODIGO C#
    dato = "NEGATIVO";
    <p style="color:red">@dato</p>
}

